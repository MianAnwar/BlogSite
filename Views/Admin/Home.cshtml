@using BlogSite.Models
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model List<Post>

<div class="container">
    <div class="container-fluid">
        <div class="heading text-center bg-white text-black-50" style="margin:auto">
            ALL POSTS
        </div>
    </div>

</div>
@foreach (Post p in Model)
{
    <div class="form">

        <div class="card gedf-card">
            <div class="card-header">
                <div class=" justify-content-between align-items-center">
                    <div class="justify-content-between align-items-center">
                        <div class="mr-2">
                            <img class="rounded-circle" width="45" src="" alt="">
                        </div>
                        <div class="ml-2">
                            <div class="h5 m-0">@p.Username</div>
                        </div>
                    </div>
                    <div>

                    </div>
                </div>

            </div>
            <div class="card-body">
                <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>@p.Date</div>
                <a class="card-link" asp-route-id="@p.Id" asp-action="detailForPostByAdmin">
                    <h5 class="card-title">@p.Title</h5>
                </a>

                <p class="card-text">
                    @p.Content
                </p>
                <a class="btn btn-dark text-right" asp-action="detailForPostByAdmin" asp-route-id="@p.Id" style="color:white">Read More</a>
            </div>
            <div class="card-footer">
                <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
                <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
            </div>
        </div>
    </div>
}

